generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id        Int      @id @default(autoincrement())
  name      String   @unique(map: "Product_name_key")
  price     Float
  createdAt DateTime @default(now())
  image     String
}

model user {
  id       String @id
  email    String @unique(map: "User_email_key")
  password String
}
